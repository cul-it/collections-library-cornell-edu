<%= render 'previous_next_doc' %>
<%= render_document_sidebar_partial  %>
<h2>
<%= render_document_show_field_value :document => @document, :field => 'title_tesim'%>
</h2>
<div class="row">
  <div id="content" class="show-document">


    <%# display if it's a book -%>
    <% page_turner = pubstmt_to_id(render_document_show_field_value :document => @document, :field => 'pubstmt_idno_tesim') %>
    <% page = 1 %>
        <div class="cover" data-no-turbolink>
          <a href="/bookreader/<%= page_turner %>/#page/<%= page %>/mode/1up"><img src="http://hydrastg.library.cornell.edu/fedora/get/<%= page_turner %>/thumbnailImage" class="img-responsive img-thumbnail" alt="Book or page image"></a>
          <% bibid_display = render_document_show_field_value :document => @document, :field => 'bibid_tesim' %>
          <% unless not_digitized?(params[:id]) %>

          <div class="reader-link" data-no-turbolink>
            <a class="btn btn-info" href="/bookreader/<%= page_turner %>/#page/<%= page %>/mode/2up"><i class="fa fa-book-open"></i>Read document online</a>
          </div>
          <div class="pdf-link" data-no-turbolink>
            <a class="btn btn-info" href="<%= ENV['STORAGE_URL'] %><%= page_turner %>/datastreams/pdf/content"><i class="fa fa-file-pdf-o"></i>Download PDF</a>
          </div>
          <% end %>

          <% bibid_display = render_document_show_field_value :document => @document, :field => 'bibid_tesim' %>
          <% if bibid_display.present? && bibid_display != "000000" %>
            <ul class="item-links">
              <li><a href="http://newcatalog.library.cornell.edu/catalog/<%= bibid_display %>">View print copy <i class="fa fa-external-link"></i></a></li>
            </ul>
          <% end %>
        </div>



    <div class="metadata">
      <%# extra_head_content << render_link_rel_alternates %>
      <%# sidebar_items << render_document_sidebar_partial %>
      <%# this should be in a partial -%>
      <div id="document" class="<%= render_document_class %>">


          <% @page_title = render_document_show_field_value :document => @document, :field => 'titlestmt_title_tesim' %>
          <%#= render_document_heading(:h2).html_safe %>
          <dl class="dl-horizontal">
            <dt class="blacklight-publication-info-label">Author:</dt>
            <dd class="blacklight-author_display"><%= render_document_show_field_value :document => @document, :field => 'author_tesim'%> </dd>
            <dt class="blacklight-publication-info-label">Print Source:</dt>
            <dd class="blacklight-publication-info"><%= render_document_show_field_value :document => @document, :field => 'pubplace_tesim'%>: <%= render_document_show_field_value :document => @document, :field => 'publisher_tesim'%>, <%= render_document_show_field_value :document => @document, :field => 'pubdate_tesim'%> </dd>
            <dt class="blacklight-publication-info-label">Publication Info:</dt>
            <dd class="blacklight-publication-info"><%= render_document_show_field_value :document => @document, :field => 'pubstmt_pubplace_tesim'%>: <%= render_document_show_field_value :document => @document, :field => 'pubstmt_publisher_tesim'%> </dd>
<% volume = render_document_show_field_value :document => @document, :field => 'vol_tesim'%>
<% if volume.present? %>
            <dt class="blacklight-volume-label">Volume:</dt>
              <dd class="blacklight-volume"><%= render_document_show_field_value :document => @document, :field => 'vol_tesim'%></dd>
              <% end %>
<% if (render_document_show_field_value :document => @document, :field => 'section_tesim').present? %>
              <dt class="blacklight-subdivision-label">Subdivision:</dt>
              <dd class="blacklight-subdivision"><%= render_document_show_field_value :document => @document, :field => 'subdiv_tesim'%></dd>
              <% end %>
<% section = render_document_show_field_value :document => @document, :field => 'vol_tesim'%>
<% if section.present? %>
<dt class="blacklight-subdivision-label">Section:</dt>
              <dd class="blacklight-subdivision"><%= render_document_show_field_value :document => @document, :field => 'section_tesim'%></dd>
             <% end %>

<% lang = render_document_show_field_value :document => @document, :field => 'lang_tesim'%>
<% note = render_document_show_field_value :document => @document, :field => 'note_tesim'%>


            <dt class="blacklight-description-label">Description:</dt>
              <dd class="blacklight-description">
<% if lang.present? %>
              <%= render_document_show_field_value :document => @document, :field => 'lang_tesim'%>,
<% end %>

<% if note.present? %>
              <%= render_document_show_field_value :document => @document, :field => 'note_tesim'%></dd>
<% end %>

<% if (render_document_show_field_value :document => @document, :field => 'subpages_tesim').present? %>

              <dt class="blacklight-supages-label">Pages supplemental:</dt>
              <dd class="blacklight-supages"><%= render_document_show_field_value :document => @document, :field => 'supages_tesim'%></dd>

              <% end %>

              <% if (render_document_show_field_value :document => @document, :field => 'witness_tesim').present? %>

              <dt class="blacklight-witness-label">Witness:</dt>
              <dd class="blacklight-witness"><%= render_document_show_field_value :document => @document, :field => 'witness_tesim'%></dd>

              <% end %>

              <% if (render_document_show_field_value :document => @document, :field => 'onames_tesim').present? %>

              <dt class="blacklight-other-names-label">Other names:</dt>
              <dd class="blacklight-other-names"><%= render_document_show_field_value :document => @document, :field => 'onames_tesim'%></dd>

              <% end %>

<% if (render_document_show_field_value :document => @document, :field => 'odates_tesim').present? %>

              <dt class="blacklight-other-dates-label">Other dates:</dt>
              <dd class="blacklight-other-dates"><%= render_document_show_field_value :document => @document, :field => 'odates_tesim'%></dd>

<% end %>


<% if (render_document_show_field_value :document => @document, :field => 'abstract_tesim').present? %>

            <dt class="blacklight-abstract-label">Abstract:</dt>
              <dd class="blacklight-abstract"><%= render_document_show_field_value :document => @document, :field => 'abstract_tesim'%></dd>

              <% end %>

              <% if (render_document_show_field_value :document => @document, :field => 'keywords_tesim').present? && params[:subject] == 'nuremberg'%>
              <dt class="blacklight-keywords-label">Keywords:</dt>
              <dd class="blacklight-keywords"><%= render_document_show_field_value :document => @document, :field => 'keywords_tesim'%></dd>


              <% end %>



        </div>
      </div>
    </div>
  </div>
</div>


</div>
<% if @document.respond_to?(:export_as_openurl_ctx_kev) %>
<!--
         // COinS, for Zotero among others.
         // This document_partial_name(@document) business is not quite right,
         // but has been there for a while.
    -->
<span class="Z3988" title="<%= @document.export_as_openurl_ctx_kev(document_partial_name(@document)) %>"></span>
<% end %>
<!--/span -->
