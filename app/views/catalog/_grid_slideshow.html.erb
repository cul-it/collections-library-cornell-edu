<% docmodel = render_index_field_value :document => document, :field => 'active_fedora_model_ssi'%>
<% seaid = render_index_field_value :document => document, :field => 'id'%>

<div class="document">
  <div class="thumbnail">
    <%= link_to '#', data: { :'slide-to' => document_counter, toggle: "modal", target: "#slideshow-modal" } do %>
   	<% if docmodel == 'Page' %> 
      <%= image_tag thumbnail_url(document) %>
  <% else %>
  <% @id = document[:id].split(':') %>
  	  <img src="http://hydrastg.library.cornell.edu/fedora/get/seapage:<%= @id[1] %>_1/thumbnailImage">
  	  <% end %>
    <% end %>
  </div>
</div>